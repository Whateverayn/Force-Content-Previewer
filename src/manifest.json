{
    "manifest_version": 3,
    "name": "Force Content Previewer",
    "version": "2.0.0",
    "description": "Prevents forced downloads on specified domains and tries to preview content in-browser.",
    "permissions": [
        "storage",
        "declarativeNetRequest",
        "scripting",
        "webRequest"
    ],
    "optional_host_permissions": [
        "*://*/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "options_ui": {
        "page": "options.html"
    },
    "icons": {
        "48": "icon.png"
    }
}
